<?xml version="1.0" encoding="UTF-8"?>
<!-- The above is a default, but its inclusion should be everywhere just to indicate that all files, for our purposes, are UTF-8 encoded.  Also, as a reminder, the less than, greater than, ampersand, apostrophe, and quotation mark are invalid XML and must be replaced with the literal text &lt; &gt; &amp; &apos; &quot; with the semicolons -->
<core_data>
	
  <igRace name="default">
	<mPopNameList kind="add"> <!-- simple list of strings.  Since can be long, separate files will have this per igRace in core -->
	  <i1>MISSING!POP NAME 1</i1>
	  <i2>MISSING POP!NAME 2</i2>
	  <i3>MISSING POP NAME!3</i3>
	  <i4>MISSING POP NAME 4!</i4>
	  <i5>!MISSING POP NAME 5</i5>
	</mPopNameList>
	<mPopNameList kind="remove"> <!-- simple list of strings.  Since can be long, separate files will have this per igRace in core -->
	  <i1>MISSING POP NAME 1</i1>
	  <i2>MISSING POP NAME 2</i2>
	  <i3>MISSING POP NAME 3</i3>
	  <i4>MISSING POP NAME 4</i4>
	  <i5>MISSING POP NAME 5</i5>
	</mPopNameList>
  </igRace>

    <!-- for tuple-lists we need to use an actual moddable object to see a difference, not just the defaults -->
  <igBuildingKind name="Road">
	<mResourcesToBuild kind="remove"> <!-- this is a list of: reference to resource, int value (positive)-->
	  <i1>
	    <a>Limestone</a>
	    <b>69420</b>
	  </i1>
	</mResourcesToBuild>
	<mResourcesToBuild kind="add"> <!-- this is a list of: reference to resource, int value (positive)-->
	  <i1>
	    <a>Limestone</a>
	    <b>45</b>
	  </i1>
	</mResourcesToBuild>
	<mResourcesToBuild kind="replace"> <!-- this is a list of: reference to resource, int value (positive)-->
	  <i1>
	    <a>Granite</a>
	    <b>45</b>
	  </i1>
	</mResourcesToBuild>
  </igBuildingKind>
  
  <!-- this demonstrates adding to a custom list -->
	<customconsts name="default">
		<mCustomVariableList kind="add">
		
	    <i1><a>example_list</a> <b>list</b> <c>I'm,good,thanks!</c></i1>
		
		</mCustomVariableList>
	</customconsts>
	
</core_data>